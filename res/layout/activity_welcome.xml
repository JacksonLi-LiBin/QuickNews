<com.lb.quicknews.wedget.discrollview.DiscrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <com.lb.quicknews.wedget.discrollview.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="25dp"
            android:text="这个夏天你喜欢世界杯吗?"
            android:textColor="@color/black"
            android:textSize="72sp"
            tools:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#007788"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_threshold="0.3" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/cheese1"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft|fromBottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            discrollve:discrollve_fromBgColor="#88EE66"
            discrollve:discrollve_toBgColor="#000000" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:src="@drawable/cheese2"
            discrollve:discrollve_translation="fromRight" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="20dp"
            android:text="一场场精彩的比赛正在尽情的演绎，你会熬夜吗？"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromBottom" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/ilovecheese_heart"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true" />

        <com.lb.quicknews.wedget.discrollview.DiscrollvablePurpleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/holo_purple"
            android:orientation="vertical"
            tools:visibility="gone" >

            <ImageView
                android:id="@+id/purpleView1"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:alpha="0"
                android:src="@drawable/cheese1"
                android:translationX="-150dp" />

            <ImageView
                android:id="@+id/purpleView2"
                android:layout_width="220dp"
                android:layout_height="110dp"
                android:layout_gravity="right"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:src="@drawable/cheese2"
                android:translationX="100dp" />
        </com.lb.quicknews.wedget.discrollview.DiscrollvablePurpleLayout>

        <com.lb.quicknews.wedget.discrollview.DiscrollvablePathLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/holo_blue_light"
            android:padding="10dp" >

            <TextView
                android:id="@+id/pathView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="10dp"
                android:text="看着世界杯球场上的帅哥，球场下的女球迷你会心动吗？"
                android:textSize="18sp" />
        </com.lb.quicknews.wedget.discrollview.DiscrollvablePathLayout>

        <com.lb.quicknews.wedget.discrollview.DiscrollvableRedLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@color/holo_red_dark"
            tools:visibility="gone" >

            <TextView
                android:id="@+id/redView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="20dp"
                android:text="马上开启属于你的世界杯之旅，让快讯客户端陪你度过这个夏天。"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/redView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:scaleX="0.1"
                android:scaleY="0.1"
                android:src="@drawable/cheese3"
                android:translationY="50dp" />
        </com.lb.quicknews.wedget.discrollview.DiscrollvableRedLayout>

        <com.lb.quicknews.wedget.discrollview.DiscrollvableGreenLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/holo_green_light"
            tools:visibility="gone" >

            <TextView
                android:id="@+id/greenView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Finally ..."
                android:textSize="36sp"
                android:textStyle="bold"
                android:translationY="-50dp" />
        </com.lb.quicknews.wedget.discrollview.DiscrollvableGreenLayout>

        <com.lb.quicknews.wedget.discrollview.DiscrollvableLastLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/lastView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:src="@drawable/ilovecheese_i"
                android:translationX="-200dp"
                android:translationY="-200dp" />

            <ImageView
                android:id="@+id/lastView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/lastView3"
                android:alpha="0"
                android:src="@drawable/ilovecheese_heart"
                android:translationX="200dp"
                android:translationY="200dp" />

            <Button
                android:id="@+id/lastView3"
                style="@style/item_content"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/lastView1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:alpha="0"
                android:background="@drawable/btn_start_bg"
                android:text="开启快讯客户端"
                android:textSize="14sp"
                android:translationY="200dp" />
        </com.lb.quicknews.wedget.discrollview.DiscrollvableLastLayout>
    </com.lb.quicknews.wedget.discrollview.DiscrollViewContent>

</com.lb.quicknews.wedget.discrollview.DiscrollView>